# Configurazione Database VPS
# IMPORTANTE: Configura questi valori nel Docker Manager di Hostinger
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_secure_password_here
DB_NAME=gestionale_energia

# JWT Secret - CAMBIA QUESTO VALORE!
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure

# URL dell'applicazione
FRONTEND_URL=https://gmgestionale.cloud
BACKEND_URL=https://gmgestionale.cloud

# Configurazione Email (opzionale - per invio email)
BREVO_API_KEY=your_brevo_api_key_here
EMAIL_FROM=noreply@gmgestionale.cloud

# Configurazione Docker
NODE_ENV=production
PORT=3001
IS_DOCKER=true

# Database SQLite (se non usi MySQL)
# DATABASE_PATH=/app/data/gestionale_energia.db