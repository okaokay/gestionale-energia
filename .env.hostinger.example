NODE_ENV=production
PORT=3001
TZ=Europe/Rome

# Security
JWT_SECRET=CHANGEME-super-secure-random-key
JWT_EXPIRES_IN=7d

# Database (SQLite persistito nel volume /app)
DATABASE_PATH=/app/gestionale_energia.db
INIT_DB=true

# URLs e CORS (imposta il tuo dominio)
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://yourdomain.com/api
CORS_ORIGIN=https://yourdomain.com

# Email (se usi integrazioni, opzionale)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# Altre opzioni
LOG_LEVEL=info